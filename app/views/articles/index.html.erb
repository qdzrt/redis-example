<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<div>
  <%= link_to 'Hottest articles', articles_path(params: { hot: 'yes' }) %>
</div>
<br>
<div>
  <%= text_field_tag 'auto-title', nil, class: 'selector'%>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article['title'] %></td>
          <td><%= article['content'] %></td>
          <td><%= link_to 'Show', article_path(article['id']) %></td>
          <td><%= link_to 'Edit', edit_article_path(article['id']) %></td>
          <td><%= link_to 'Destroy', article_path(article['id']), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Article', new_article_path %>
</div>
